<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventListItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/eventListItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp">
    </TextView>

    <TextView
        android:id="@+id/eventListItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/eventListItemType"
        android:textSize="16sp"
        android:layout_marginTop="3dip" />

    <TextView
        android:id="@+id/eventListItemLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventListItemType"
        android:layout_toRightOf="@+id/eventListItemDate"
        android:textSize="16sp"
        android:layout_marginTop="3dip"
        android:layout_marginLeft="10dip"/>

    <TextView
        android:id="@+id/eventListItemAbsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventListItemDate"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"/>

    <!-- Rightend Arrow -->
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right_black_18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>